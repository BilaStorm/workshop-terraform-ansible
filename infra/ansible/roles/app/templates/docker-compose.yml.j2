# docker-compose.yml.j2
# Template Jinja2 pour générer docker-compose.yml

version: '3.8'

services:
  flask_app:
    image: devops-local-app:latest
    container_name: devops_lab_flask_app
    ports:
      - "5000:5000"
    environment:
      - FLASK_ENV=production
      - PORT=5000
    restart: unless-stopped